@model CarDealership.UI.Models.UserViewModel
@{
    ViewBag.Title = "AddUser";
}

<h2>Add User</h2>
<hr/>
@using (Html.BeginForm("AddUser", "Admin", FormMethod.Post,
    new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary("", new { @class = "text-error" })*@

    <div class="form-group row">
        <div class="col-sm-2">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.UserName)</span>
        </div>

        <div class="col-sm-2">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
        </div>

        <div class="col-sm-2">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            @Html.LabelFor(m => m.Role, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Role, Model.RoleItems, "-Choose One-", new { @class = "form-control", id = "list-roles" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
}
