@model List<Exercises.Models.Data.Major>

@{
    ViewBag.Title = "Admin-Majors";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("AdminNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <h4>Majors</h4>
        @Html.ActionLink("Add Major", "AddMajor", "Admin", null, new { @class = "btn btn-primary" })
        <table class="table table-striped" style="width: auto;">
            <thead>
                <tr>
                    <th>Major</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var major in Model)
                {
                    <tr>
                        <td>@major.MajorName</td>
                        <td>
                            @Html.ActionLink("Edit", "EditMajor", "Admin", new { id = major.MajorId }, null) |
                            @Html.ActionLink("Delete", "DeleteMajor", "Admin", new { id = major.MajorId }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

