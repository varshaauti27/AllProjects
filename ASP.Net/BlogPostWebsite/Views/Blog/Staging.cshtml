@model BlogPostWebsite.Models.CreatePostViewModel
@{
    ViewBag.Title = "Staging";
}

<h2>Create post</h2>

@using (Html.BeginForm("SavePost", "Blog"))
{
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Post.Title, new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Post.Title, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.Post.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Post.CategoryId, new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Post.CategoryId, Model.CategoryItem, "-Choose One-", new { @class = "form-control", id = "list-category", required = "required" })
            @Html.ValidationMessageFor(model => model.Post.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Post.Tags, new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Post.Tags, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Post.Tags, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Post.Description, new { @class = "control-label col-md-2", @style = "font-weight:bold" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Post.Description, new { htmlAttributes = new { @class = "form-control", id = "Description", row = 6, required = "required" } })
            @Html.ValidationMessageFor(model => model.Post.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {

    <script type="text/javascript">
        tinyMCE.init({
            selector: "textarea"
        });
    </script>
}

